<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="Timers" Height="350" Width="525">
    <Window.Resources>
        <local:WorkoutRoundSteps x:Key="WorkoutSteps"/>
        <local:RunWorkoutCommand x:Key="RunWorkout"/>
    </Window.Resources>
    <StackPanel>
        <DataGrid ItemsSource="{StaticResource WorkoutSteps}" />
        <ToolBar>
            <Button Content="Run" CommandParameter="{StaticResource WorkoutSteps}" Command="{StaticResource RunWorkout}" />
            <Button Content="Stop" Command="{Binding Cancel, Source={StaticResource RunWorkout}}" />
            <TextBox Text="{Binding NumberOfSets, Source={StaticResource RunWorkout}}" />
            <Button Content="+" Command="{Binding AddSet, Source={StaticResource RunWorkout}}" />
            <Button Content="-" Command="{Binding RemoveSet, Source={StaticResource RunWorkout}}" />
        </ToolBar>
    </StackPanel>
</Window>
